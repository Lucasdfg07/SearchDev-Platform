<div class='card z-depth-4 block'>
  <div class='card-content contact'>
    <%= render partial: "portfolios/shared/block_header", locals: {title: 'SOCIAL'} %>
    <div class='row'>
      <div class="col m10 offset-m1">
        <% portfolio.socials.each do |social| %>
          <div class="row item">
            <div class="col m3 s3">
              <%= image_tag("socials/#{social.kind}.png", class: "responsive-img") %>
            </div>
 
            <div class="col m9 s9">
              <a href="<%= social.url %>" target="_blank" class="custom-grey-text text-darken-1">
                <p class="name">
                  <%= "/#{social.url.split('/').last}" %>
                </p>
              </a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>