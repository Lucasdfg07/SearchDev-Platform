<div class="portfolio col s12 m3 l3">
  <div class="card-panel center">
    <div class="col s12 m12 l12">
      <a href="" class="remove-portfolio right custom-grey-text text-darken-2">
        <i class="fa fa-icon fa-times"></i>
      </a>
    </div>
    <div class="row"><%= render_profile_photo(portfolio) %></div>
    <span class="name grey-text text-darken-2"><%= render_profile_name(portfolio) %></span>
    <div class="label grey darken-3 grey-text text-lighten-2"><%= render_profile_title(portfolio) %></div>
    <div class="row tags">
      <% render_portfolio_tags(portfolio.tags) %>
    </div>
    <div class="row">
      <div class="col s6 m6 l6">
        <%= link_to "Editar", edit_portfolio_path(portfolio), class: "btn light-blue lighten-2 col m12 s12" %>
      </div>
      <div class="col s6 m6 l6">
        <%= link_to "Visualizar", portfolio, class: "btn orange darken-1 right col m12 s12" %>
      </div>
    </div>
  </div>
</div>